<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="video-downloader">
  <enum id="io.github.gustavoperedo.VideoDownloader">
    <value value="0" nick="audio"/>
    <value value="1" nick="video"/>
  </enum>

  <schema id="io.github.gustavoperedo.VideoDownloader" path="/io.github.gustavoperedo/VideoDownloader/">
    <key type="s" name="download-folder">
      <default>'xdg-download/VideoDownloader'</default>
    </key>
    <key name="dark-mode" type="b">
      <default>false</default>
      <summary>Dark mode</summary>
      <description>Dark mode</description>
    </key>
    <key type="b" name="prefer-mpeg">
      <default>false</default>
    </key>

    <key name="mode" enum="io.github.gustavoperedo.VideoDownloader">
      <default>'audio'</default>
    </key>

    <key type="u" name="resolution">
      <default>1080</default>
    </key>
  </schema>
</schemalist>
